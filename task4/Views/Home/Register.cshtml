@model task4.Models.User

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Login</label>
        <input asp-for="Login" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <label>Full Name</label>
        <input asp-for="FullName" />
    </div>
    <button type="submit">Save</button>
</form>
